import pandas as pd
import matplotlib.pyplot as plt

# Load the data
data = pd.read_csv('data.csv')

# Summarize data if necessary, e.g., count of occurrences
# For demonstration purposes, let's assume the first column is categorical
# and plot counts of unique values from it.

# For this example, I'm assuming the CSV has a column named 'Category'
category_counts = data['Category'].value_counts()

# Create the plot
plt.figure(figsize=(10, 6))
ax = category_counts.plot(kind='bar', color='cyan', edgecolor='black') 

# Setting a black background
ax.set_facecolor('black')

# Make plot labels and title white for contrast
plt.title('Bar Chart with Black Background', color='white')
plt.xlabel('Categories', color='white')
plt.ylabel('Counts', color='white')
plt.xticks(color='white')
plt.yticks(color='white')

# Adjust the plot's background to black as well
plt.gcf().patch.set_facecolor('black')

# Save the figure
plt.savefig('output.png')

# Show the plot
plt.show()
